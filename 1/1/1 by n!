#include <stdio.h>

// Function to calculate the factorial of a number
unsigned long long factorial(int num) {
    if (num == 0 || num == 1) {
        return 1;
    } else {
        return num * factorial(num - 1);
    }
}

int main() {
    int n;

    // Get the value of n from the user
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Check if n is non-negative
    if (n >= 0) {
        // Calculate n!
        unsigned long long nFactorial = factorial(n);

        // Calculate and print the result of 1/n!
        if (nFactorial != 0) {
            double result = 1.0 / nFactorial;
            printf("1/%d! is: %.10f\n", n, result);
        } else {
            // Handle overflow for large values of n
            printf("Error: Overflow occurred for n!\n");
        }
    } else {
        // Handle negative values of n
        printf("Error: n must be a non-negative integer.\n");
    }
    return 0;

}
